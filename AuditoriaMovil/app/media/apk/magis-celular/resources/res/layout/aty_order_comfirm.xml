<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:gravity="center_horizontal" android:orientation="vertical" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobile.brasiltv.view.TitleView android:id="@+id/mTitleView" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <ImageView android:layout_width="152px" android:layout_height="152px" android:layout_marginTop="120px" android:src="@drawable/ic_tip_order_comfirm"/>
    <TextView android:textSize="28px" android:textColor="@color/color_1a1a1a" android:gravity="center" android:id="@+id/mTvPaymentTip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="55px" android:layout_marginTop="62px" android:layout_marginRight="55px" android:text="Please confirm whether the Boleto payment has been completed"/>
    <Button android:textSize="32px" android:id="@+id/mBtnPaid" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="55px" android:layout_marginTop="95px" android:layout_marginRight="55px" android:text="@string/order_confirm_paid" android:textAllCaps="false" style="@style/KoocanButtonEnable"/>
    <Button android:textSize="32px" android:id="@+id/mBtnPreparing" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="55px" android:layout_marginTop="20px" android:layout_marginRight="55px" android:text="@string/order_confirm_preparing" android:textAllCaps="false" style="@style/KoocanButtonEnable"/>
    <Button android:textSize="32px" android:id="@+id/mBtnRepay" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="55px" android:layout_marginTop="20px" android:layout_marginRight="55px" android:text="@string/order_confirm_unpaid" android:textAllCaps="false" style="@style/KoocanButtonEnable"/>
    <Button android:textSize="32px" android:id="@+id/mBtnCancel" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="55px" android:layout_marginTop="20px" android:layout_marginRight="55px" android:text="@string/order_confirm_cancel" android:textAllCaps="false" style="@style/KoocanButtonEnable"/>
    <TextView android:textSize="24px" android:textColor="@color/color_00aaff" android:id="@+id/mTvHelp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:layout_marginTop="60px" android:layout_marginRight="20px" android:text="@string/order_confirm_help"/>
    <View android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1"/>
    <TextView android:textSize="24px" android:textColor="@color/color_999999" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:layout_marginRight="20px" android:layout_marginBottom="25px" android:text="@string/redemption_any_question"/>
</com.zhy.autolayout.AutoLinearLayout>
