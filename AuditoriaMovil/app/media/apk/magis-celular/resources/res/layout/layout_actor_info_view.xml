<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="36px" android:textColor="@color/color_ffffff" android:id="@+id/mTextName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="30px" android:layout_marginRight="190px" android:text="@string/unkownInfo" android:singleLine="false"/>
    <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mLinearInfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="13px" android:layout_marginRight="190px" android:layout_below="@+id/mTextName">
        <TextView android:textSize="24px" android:textColor="@color/color_b3b3b3" android:id="@+id/mTextCountry" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <View android:background="@color/color_666666" android:layout_width="2px" android:layout_height="16px" android:layout_marginLeft="10px" android:layout_marginRight="10px"/>
        <TextView android:textSize="24px" android:textColor="@color/color_b3b3b3" android:id="@+id/mTextReleaseTime" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <View android:background="@color/color_666666" android:layout_width="2px" android:layout_height="16px" android:layout_marginLeft="10px" android:layout_marginRight="10px"/>
        <TextView android:textSize="24px" android:textColor="@color/color_b3b3b3" android:ellipsize="end" android:id="@+id/mTextType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/type" android:singleLine="true"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/mFavLayout" android:background="@drawable/shape_vod_detail_fav_bg" android:layout_width="68px" android:layout_height="68px" android:layout_marginTop="30px" android:layout_marginRight="24px" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/mImageFav" android:layout_width="47px" android:layout_height="43px" android:src="@drawable/ic_vod_unfav" android:scaleType="fitXY"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/mShareLayout" android:background="@drawable/shape_vod_detail_fav_bg" android:layout_width="68px" android:layout_height="68px" android:layout_marginTop="30px" android:layout_marginRight="20px" android:layout_toLeftOf="@+id/mFavLayout">
        <ImageView android:id="@+id/mImageShare" android:layout_width="47px" android:layout_height="43px" android:src="@mipmap/icon_share_live" android:scaleType="fitXY"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.mobile.brasiltv.player.view.ProgramSetInfoView android:id="@+id/mProgramSetInfoView" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/mLinearInfo"/>
    <com.mobile.brasiltv.player.view.ProgramDetailView android:id="@+id/mProgramDetail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/mProgramSetInfoView"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/mTextDirector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="25px" android:text="@string/dector" android:singleLine="true" android:layout_below="@+id/mProgramDetail"/>
    <TextView android:textSize="12sp" android:textColor="@color/color_999999" android:ellipsize="end" android:id="@+id/mTextActors" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20px" android:layout_marginRight="35px" android:text="@string/actor" android:singleLine="true" android:layout_below="@+id/mTextDirector" android:layout_alignLeft="@+id/mTextDirector"/>
    <TextView android:textSize="24px" android:textColor="@color/color_999999" android:gravity="center" android:id="@+id/mTvGrade" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="20px" android:text="16+" android:layout_below="@+id/mTextActors"/>
    <TextView android:textSize="24px" android:textColor="@color/color_important" android:id="@+id/mTvAwards" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="20px" android:text="@string/vod_awards" android:layout_toRightOf="@+id/mTvGrade" android:layout_below="@+id/mTextActors"/>
</merge>
