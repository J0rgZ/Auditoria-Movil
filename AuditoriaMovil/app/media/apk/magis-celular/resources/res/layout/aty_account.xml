<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/color_1f2029" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobile.brasiltv.view.TitleView android:id="@+id/title_view" android:background="@color/color_191a23" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/mine_account"/>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:id="@+id/mLayout" android:background="@color/color_2c2d39" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15px" android:layout_below="@+id/title_view">
        <com.zhy.autolayout.AutoRelativeLayout android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="90px">
            <TextView android:textSize="30px" android:textColor="@color/ffffff" android:id="@+id/mTvAccount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="26px" android:text="@string/account_number"/>
            <TextView android:textSize="20px" android:textColor="@color/color_aaaaaa" android:id="@+id/mTextAccountDesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="24px" android:text="(8013323)" android:layout_alignBaseline="@+id/mTvAccount" android:layout_alignParentRight="true"/>
            <TextView android:textSize="26px" android:textColor="@color/color_cccccc" android:id="@+id/mTextAccount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123abcdefg" android:layout_toLeftOf="@+id/mTextAccountDesc" android:layout_alignBaseline="@+id/mTvAccount"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <ImageView android:layout_width="match_parent" android:layout_height="1px" android:src="@color/color_1f2029"/>
        <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutEmail" android:clickable="true" android:layout_width="match_parent" android:layout_height="90px">
            <TextView android:textSize="30px" android:textColor="@color/ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="26px" android:text="@string/email" android:layout_centerVertical="true"/>
            <TextView android:textSize="26px" android:textColor="@color/color_cccccc" android:id="@+id/mTextEmail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="55px" android:text="" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:layout_width="14px" android:layout_height="25px" android:layout_marginRight="24px" android:src="@drawable/icon_mine_arrow" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <ImageView android:layout_width="match_parent" android:layout_height="1px" android:src="@color/color_1f2029"/>
        <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutChangePwd" android:clickable="true" android:layout_width="match_parent" android:layout_height="90px">
            <TextView android:textSize="30px" android:textColor="@color/ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="26px" android:text="@string/change_password" android:layout_centerVertical="true"/>
            <ImageView android:layout_width="14px" android:layout_height="25px" android:layout_marginRight="24px" android:src="@drawable/icon_mine_arrow" android:scaleType="fitXY" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:id="@+id/mLayoutGoogle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/mLayout">
        <TextView android:textSize="15sp" android:textColor="@color/color_ffffff" android:gravity="bottom" android:paddingLeft="23px" android:paddingBottom="12px" android:layout_width="match_parent" android:layout_height="85px" android:text="@string/bind_google_account"/>
        <com.zhy.autolayout.AutoRelativeLayout android:background="@color/color_2c2d39" android:layout_width="match_parent" android:layout_height="110px">
            <ImageView android:id="@+id/mIvGoogleIcon" android:layout_width="68px" android:layout_height="68px" android:layout_marginLeft="29px" android:src="@drawable/ic_login_google" android:layout_centerVertical="true"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_ffffff" android:id="@+id/mTvGoogle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="@string/google_name" android:layout_toRightOf="@+id/mIvGoogleIcon" android:layout_centerVertical="true"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_ff939393" android:id="@+id/mTvGoogleNick" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10px" android:text="@string/google_name" android:layout_toRightOf="@+id/mTvGoogle" android:layout_centerVertical="true"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/mTvGoogleBindOrUnbind" android:background="@drawable/bg_green_radius_checked_bt" android:paddingLeft="25px" android:paddingRight="25px" android:layout_width="wrap_content" android:layout_height="70px" android:layout_marginRight="24px" android:text="@string/am_to_bind" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/mTvSwitchAccount" android:background="@drawable/bg_gray_radius" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:layout_marginBottom="20px" android:text="@string/switch_account_title" android:layout_above="@+id/mTvLoginOrLogout" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/mTvLoginOrLogout" android:background="@drawable/bg_gray_radius" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="24px" android:layout_marginRight="24px" android:layout_marginBottom="80px" android:text="@string/login_out" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <ProgressBar android:id="@+id/mLoadingPbar" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
</com.zhy.autolayout.AutoRelativeLayout>
