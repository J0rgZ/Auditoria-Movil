<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:background="@drawable/bg_standard_dialog" android:layout_width="560px" android:layout_height="400px">
        <TextView android:textSize="18sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/mTvTitle" android:layout_width="match_parent" android:layout_height="80px"/>
        <View android:background="@color/color_important" android:layout_width="match_parent" android:layout_height="2px"/>
        <TextView android:textSize="12sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/mTvMessage" android:layout_width="match_parent" android:layout_height="0px" android:layout_weight="1"/>
        <View android:background="@color/color_d5d5d5" android:layout_width="match_parent" android:layout_height="1px"/>
        <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="100px">
            <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/mBtnLeft" android:focusable="true" android:clickable="true" android:layout_width="279.5px" android:layout_height="match_parent"/>
            <View android:id="@+id/mIvLine" android:background="@color/color_d5d5d5" android:layout_width="1px" android:layout_height="match_parent"/>
            <TextView android:textSize="15sp" android:textColor="@color/color_333333" android:gravity="center" android:id="@+id/mBtnRight" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
