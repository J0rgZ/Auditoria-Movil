<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout android:gravity="center_vertical" android:id="@+id/mLayoutTitle" android:background="@color/color_191a23" android:layout_width="match_parent" android:layout_height="130px">
        <TextView android:textSize="36px" android:textStyle="italic|bold" android:textColor="@color/color_ffffff" android:gravity="center" android:id="@+id/mTextTitle" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/app_name" android:singleLine="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/mVodImageLogo" android:background="@drawable/icon_live_home_logo" android:layout_width="96px" android:layout_height="58px" android:layout_marginLeft="30px" android:scaleType="fitCenter" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/mImageSearch" android:background="@drawable/icon_live_home_search" android:layout_width="42px" android:layout_height="42px" android:layout_marginRight="30px" android:scaleType="fitCenter" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.mobile.brasiltv.view.RatioFrameLayout android:id="@+id/livePlayFrg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2px" android:layout_below="@+id/mLayoutTitle" app:enable="true" app:ratio="1.78"/>
    <com.mobile.brasiltv.view.LiveFragmentTabLayout android:id="@+id/liveFragmentTab" android:background="@color/color_191a23" android:layout_width="match_parent" android:layout_height="85px" android:layout_below="@+id/livePlayFrg" app:leftTextColor="@color/white" app:leftTextSize="20px" app:rightTextColor="@color/white" app:rightTextSize="20px" app:selectIndexColor="@color/color_important" app:selectTextColor="@color/color_important"/>
    <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/channelAndFavoriteContent" android:background="@color/color_191a23" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/liveFragmentTab">
        <com.zhy.autolayout.AutoFrameLayout android:id="@+id/channelAndFavoriteFrg" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:id="@+id/mLayoutEPGTitle" android:background="@color/color_191a23" android:visibility="gone" android:layout_width="match_parent" android:layout_height="80px" android:layout_below="@+id/livePlayFrg">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="16px" android:layout_height="30px" android:layout_marginLeft="28px" android:src="@drawable/icon_epg_arrow" android:scaleType="fitXY"/>
        <TextView android:textSize="30px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:id="@+id/mTextEpgChannel" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="19px" android:text="TNT HD"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutEpgContent" android:background="@color/color_191a23" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/mLayoutEPGTitle">
        <com.zhy.autolayout.AutoFrameLayout android:id="@+id/mLayoutEPGFragment" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoRelativeLayout>
