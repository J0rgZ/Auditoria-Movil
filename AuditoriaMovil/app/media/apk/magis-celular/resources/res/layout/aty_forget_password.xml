<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/color_1f2029" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobile.brasiltv.view.TitleView android:id="@+id/title_view" android:background="@color/color_191a23" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/forget_the_password"/>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:id="@+id/mLayoutForget" android:background="@color/color_2c2d39" android:visibility="visible" android:layout_width="match_parent" android:layout_height="90px" android:layout_marginTop="15px" android:layout_below="@+id/title_view">
        <TextView android:textSize="30px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:paddingLeft="29px" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/email"/>
        <EditText android:textSize="30px" android:textColor="@color/color_999999" android:textColorHint="@color/color_999999" android:gravity="center_vertical" android:id="@+id/mEditEmail" android:background="@null" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="26px" android:hint="@string/enter_your_email" android:singleLine="true"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView android:textSize="30px" android:textColor="@color/ffffff" android:gravity="center" android:id="@+id/mTextConfirm" android:background="@drawable/icon_mine_button" android:layout_width="702px" android:layout_height="80px" android:layout_marginTop="241px" android:text="@string/confirm" android:layout_below="@+id/mLayoutForget" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="26px" android:textColor="@color/color_f23232" android:gravity="center" android:id="@+id/mTextErrorNotify" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="81px" android:text="Wrong password, please re-enter!" android:layout_below="@+id/mTextConfirm" android:layout_centerHorizontal="true"/>
    <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutEmailSend" android:background="@color/color_E6000000" android:visibility="gone" android:layout_width="702px" android:layout_height="359px" android:layout_marginTop="-170px" android:layout_below="@+id/mTextConfirm" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/mImageClose" android:layout_width="30px" android:layout_height="30px" android:layout_marginTop="20px" android:layout_marginRight="20px" android:src="@drawable/icon_x" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
        <ImageView android:id="@+id/mImageEmailSend" android:layout_width="119px" android:layout_height="118px" android:layout_marginTop="52px" android:src="@drawable/icon_email_send" android:scaleType="fitXY" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="24px" android:textColor="@color/ffffff" android:gravity="center" android:id="@+id/mTextSuccessNotify" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="37px" android:text="The activation link will be sent to your email within 5 minutes. Please go to your email to complete the activation and log in when finished." android:layout_below="@+id/mImageEmailSend" android:layout_centerHorizontal="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <ProgressBar android:id="@+id/mLoadingPb" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
</com.zhy.autolayout.AutoRelativeLayout>
