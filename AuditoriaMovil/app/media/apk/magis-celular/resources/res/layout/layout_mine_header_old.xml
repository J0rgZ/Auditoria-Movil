<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutHeader" android:background="@drawable/bg_mine_local_header" android:layout_width="match_parent" android:layout_height="340px">
        <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutTop" android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/mImageScan" android:padding="5px" android:layout_width="46px" android:layout_height="42px" android:layout_marginTop="20px" android:layout_marginRight="20px" android:src="@drawable/icon_mine_scan" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
            <com.zhy.autolayout.AutoFrameLayout android:id="@+id/mIvMsgBox" android:background="@drawable/ripper_common" android:padding="5px" android:layout_width="40px" android:layout_height="47px" android:layout_marginTop="-3px" android:layout_marginRight="40px" android:layout_toLeftOf="@+id/mImageScan" android:layout_alignTop="@+id/mImageScan">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/ic_mine_msg_box" android:scaleType="fitXY"/>
            </com.zhy.autolayout.AutoFrameLayout>
            <TextView android:textSize="20px" android:textColor="@color/color_important_white" android:gravity="center" android:id="@+id/mTvMsgCount" android:background="@drawable/bg_red_dot_msg_box" android:paddingLeft="4px" android:paddingTop="1px" android:paddingRight="4px" android:paddingBottom="1px" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="34px" android:layout_marginTop="-11px" android:minWidth="32px" android:singleLine="true" android:layout_alignLeft="@+id/mIvMsgBox" android:layout_alignTop="@+id/mIvMsgBox"/>
            <ImageView android:id="@+id/mImageAvatar" android:layout_width="100px" android:layout_height="100px" android:layout_marginLeft="25px" android:layout_marginTop="16px" android:src="@drawable/icon_mine_avatar" android:scaleType="fitXY" android:layout_below="@+id/mImageScan"/>
            <ImageView android:id="@+id/mImageCrown" android:visibility="visible" android:layout_width="38px" android:layout_height="38px" android:layout_marginLeft="-30px" android:layout_marginTop="6px" android:layout_marginRight="4px" android:src="@drawable/icon_vip_expired" android:scaleType="fitCenter" android:layout_toRightOf="@+id/mImageAvatar" android:layout_below="@+id/mImageScan"/>
            <TextView android:textSize="36px" android:textColor="@color/ffffff" android:id="@+id/mTvUserName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21px" android:text="123557893456" android:layout_toRightOf="@+id/mImageAvatar" android:layout_alignTop="@+id/mImageAvatar"/>
            <TextView android:textSize="20px" android:textColor="@color/color_aaaaaa" android:id="@+id/mTvUserId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21px" android:text="8013323" android:layout_toRightOf="@+id/mImageAvatar" android:layout_below="@+id/mTvUserName"/>
            <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:id="@+id/mAllServiceWrapper" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="21px" android:layout_toRightOf="@+id/mImageAvatar" android:layout_below="@+id/mTvUserId">
                <TextView android:textSize="10sp" android:textColor="@color/color_aaaaaa" android:gravity="bottom" android:id="@+id/mVipServiceHint" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10px"/>
                <ImageView android:id="@+id/mImageAuthInfoMore" android:paddingLeft="10px" android:paddingTop="10px" android:paddingRight="10px" android:paddingBottom="10px" android:visibility="gone" android:layout_width="49px" android:layout_height="49px" android:src="@drawable/icon_auth_info_more" android:scaleType="fitCenter"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoFrameLayout android:orientation="vertical" android:id="@+id/mAflBindHint" android:background="@drawable/bg_mine_bind_hint" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="22px" android:layout_marginTop="-50px" android:layout_marginRight="22px">
        <TextView android:textSize="15sp" android:textColor="@color/color_fefefe" android:gravity="center_vertical" android:id="@+id/mTvBindAndGainFree" android:paddingLeft="48px" android:paddingRight="134px" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/mine_bind_and_gain_free"/>
        <ImageView android:layout_gravity="center" android:id="@+id/mIvGoBind" android:layout_width="85px" android:layout_height="85px" android:layout_marginRight="10px" android:src="@drawable/ic_mine_go_bind"/>
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>
