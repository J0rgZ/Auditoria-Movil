<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@drawable/shape_dialog_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="36px" android:textStyle="bold" android:textColor="@color/color_1a1a1a" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40px" android:layout_marginTop="50px" android:layout_marginRight="40px" android:text="@string/version_forbidden_upgrade_title"/>
        <TextView android:textSize="26px" android:textColor="@color/color_333333" android:gravity="top|center_horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="40px" android:layout_marginTop="30px" android:layout_marginRight="40px" android:layout_marginBottom="20px" android:text="@string/version_forbidden_upgrade_content" android:layout_weight="1" android:lineSpacingExtra="30px"/>
