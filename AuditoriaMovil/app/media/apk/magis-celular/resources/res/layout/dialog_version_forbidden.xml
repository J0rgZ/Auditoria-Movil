        <ProgressBar android:layout_gravity="center" android:layout_width="50px" android:layout_height="50px" android:indeterminateDrawable="@drawable/progress_loading" android:layout_centerInParent="true" style="?android:attr/progressBarStyleLarge"/>
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoFrameLayout>
